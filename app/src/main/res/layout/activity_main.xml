<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/background">

    <FrameLayout
        android:id="@+id/utility_fragment_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:background="@drawable/background"/>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.android11.MainActivity"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:contentDescription="Android 11"
            android:layout_marginBottom="15dp"
            android:src="@drawable/chess_logo"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_marginBottom="30dp"

            android:text="Chess App"
            android:textAlignment="gravity"
            android:gravity="center"
            android:textSize="40sp"
            android:textAllCaps="false"/>

        <Button
            style="@style/mainButtonStyle"
            android:id="@+id/start_game_button"
            android:text="Start Game"/>

        <Button
            style="@style/mainButtonStyle"
            android:id="@+id/recorded_games"
            android:text="Recorded Games"/>

    </LinearLayout>

</RelativeLayout>
